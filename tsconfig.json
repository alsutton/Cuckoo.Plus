{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./public/dist/",
    "sourceMap": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "target": "es2015",
    "allowJs": true,
    "paths": {
      "@/*": [ "src/*" ]
    },
    "lib": ["es2015", "dom"]
  },
  "exclude": [
    "node_modules"
  ]
}
